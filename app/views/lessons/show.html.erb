<h1> <%="Lesson #{@lesson.id}" %></h1>
<div id="lesson">
    <%= form_for @lesson do |f| %>
        <%= f.fields_for :lesson_words do |lesson_word_fields| %>
            <div id="lesson_word_content_<%= lesson_word_fields.index+1 %>" class="lesson_word_content">
                <div class="word"><%= "No #{lesson_word_fields.index+1}\t" %><%= lesson_word_fields.object.word.content %> </div>
                <% lesson_word_fields.object.word.word_answers.each do |word_answer|%>
                    <ul>
                        <li>
                            <%= lesson_word_fields.radio_button :word_answer_id, word_answer.id %>
                            <%= lesson_word_fields.label   :word_answer_id, word_answer.content, value: word_answer.id%>
                        </li>
                    </ul>
                <br>
                <% end %>
                <button class="btn btn-primary previous" id="previous_<%= lesson_word_fields.index+1 %>">Previous</button>
                <button class="btn btn-primary next" id="next_<%= lesson_word_fields.index+1 %>"> Next</button>
            </div>
        <% end %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
</div>
