<%= form_for object.lessons.build do |f| %>
<table class="table" id="category_table">
        <tbody>
<tr>
    <td>
        <div class="empty_side">
        </div>
    </td>
    <td class="category_side">
        <table>
            <tr>
                <td><b><%=object %></b><%= "\tYou\'ve learned #{Word.learned(current_user.id, object.id).count}" %></td>
            </tr>
            <tr>
                <td> <%=  object.description %> </td>
            </tr>
            <tr>
                <td>
                    <%= f.hidden_field :category_id %>
                    <%= f.hidden_field :user_id %>
                    <%= f.submit "Start Lesson", class: "btn btn-primary start_lesson" %>
                </td>
            </tr>
        </table>
    </td>
</tr>
</tbody>
</table>
<% end %>
