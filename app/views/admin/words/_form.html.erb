<%= form_for [:admin, @word] do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label :content %>
    <%= f.text_field :content, autofocus: true %><br>
    <%= f.label :category %>
    <%= f.select :category_id, Category.all.map{|category| [category.name, category.id]}, {prompt: "Select Category"} %><br>
    <div class="bold"> Word Answers </div>
        <%= f.fields_for :word_answers do |word_answer_field| %>
            <ul class="word_answer_list">
                <li>
                    <%= word_answer_field.label :content %>
                    <%= word_answer_field.text_field :content %>
                    <%= word_answer_field.radio_button :correct, true, class: "word_answer_item" %>
                    <%= word_answer_field.label :correct %>
                </li>
            </ul>
        <% end %>
    <%= f.submit label, class: "btn btn-primary" %>
<% end %>
