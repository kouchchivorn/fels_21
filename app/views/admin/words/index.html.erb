<%= provide(:title, 'Word List')%>
<%= form_tag admin_words_path, {method: :get} do %>
      <span>Category</span>
      <%= select_tag "category_id",
                options_from_collection_for_select(Category.all, "id", "name", selected: params[:category_id]),  prompt: "--------------------", selected: :prompt%>
      <%= text_field_tag "content", params[:content] %>
      <%= submit_tag "Filter", class: "btn btn-medium" %>
<% end %>
<%= link_to "Create new word", new_admin_word_path, class: "btn btn-primary" %>
<div class="span6 offset3">
    <table class="table">
        <thead>
            <th>No. </th>
            <th>Japanese</th>
            <th>English</th>
            <th>Make Changes?</th>
        </thead>
        <tbody>
            <%= render @words %>
        </tbody>
        <%= will_paginate @words %>
    </table>
</div>

