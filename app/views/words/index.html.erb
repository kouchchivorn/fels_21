<%= provide(:title, 'Word List')%>
<%= form_tag words_path, {method: :get} do %>
      <span>Category</span>
      <%= select_tag "category_id",
                options_from_collection_for_select(Category.all, "id", "name", selected: params[:category_id]),  prompt: "--------------------", selected: :prompt%>
      <div class="form_row">
          <% ["learned", "not_learned", "all"].each do |learn| %>
              <%= radio_button_tag "learn", learn, params[:learn] == learn %>
              <%= learn.humanize %>
          <% end %>
      </div>
          <%= submit_tag "Filter", class: "btn btn-medium" %>
<% end %>

<div class="span6 offset3">
    <table class="table">
        <thead>
            <th>Japanese</th>
            <th>English</th>
        </thead>
        <tbody>
            <%= render @words %>
        </tbody>
        <%= will_paginate @words %>
    </table>
</div>

